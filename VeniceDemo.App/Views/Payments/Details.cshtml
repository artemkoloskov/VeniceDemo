@model VeniceDemo.App.Models.Payment

@{
    ViewData["Title"] = "Детали платежа";
}

<h1 class="display-6">Детали Платежа</h1>

<div>
    <h4>Платеж №@Model.Id от @Model.DateCreated</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Дата платежа
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class = "col-sm-2">
            Сумма платежа
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            Клиент
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Orders" asp-action="Index">Назад, в личный кабинет</a>
</div>
